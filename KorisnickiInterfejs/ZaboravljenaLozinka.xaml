<Window x:Class="KorisnickiInterfejs.ZaboravljenaLozinka"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KorisnickiInterfejs"
        mc:Ignorable="d"
        Title="ZaboravljenaLozinka" Height="450" Width="450">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <Grid Margin="0 20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Text="Ime: " FontSize="16"/>
            <TextBox Grid.Column="1" Name="tbIme" FontSize="12" Width="200"/>
        </Grid>
        <Grid Margin="0 0 0 20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Text="Prezime: " FontSize="16"/>
            <TextBox Grid.Column="1" Name="tbPrezime" FontSize="12" Width="200"/>
        </Grid>
        <Button Click="BtnVratiSifru_Click" Name="btnVratiSifru" Content="Vrati sifru za zaposlenog" Width="160" Height="40"/>
    </StackPanel>
</Window>
