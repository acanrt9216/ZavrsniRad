<Window x:Class="KorisnickiInterfejs.Podesavanja"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KorisnickiInterfejs"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d"
        Title="Podesavanja" Height="450" Width="400">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <CheckBox Name="cbBojaBG" Content="Night mode" FontSize="18" Margin="0 0 0 20"/>
        <Button Click="BtnSacuvajPromene_Click" Name="btnSacuvajPromene" FontSize="14" Content="Sacuvaj promene" Width="150" Height="30"/>
    </StackPanel>
</Window>
